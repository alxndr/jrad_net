<h2><%= @venue.name %></h2>

<p>In <%= @venue.location %></p>

<%= if @venue.capacity do %>
  <p><strong>Capacity:</strong> <%= @venue.capacity %></p>
<% end %>

<ul>
  <%= for show <- shows_for(@venue) do %>
    <li><a href="<%= show_path(@conn, :show, show) %>"><%= readable_date(show) %></a></li>
  <% end %>
</ul>

<div class="form-group">
  <%= link "Edit", to: venue_path(@conn, :edit, @venue), class: "btn" %>
  <%= link "Back", to: venue_path(@conn, :index), class: "btn" %>
</div>
